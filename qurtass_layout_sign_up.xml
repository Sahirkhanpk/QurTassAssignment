<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="@dimen/_20sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/header13x">
        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/logo3x"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Please Sign-Up to continue"
            android:textColor="@color/colorPrimaryDark"/>
        <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginTop="@dimen/_20sdp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/etName"
                android:hint="Name"
                android:background="null"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/v0"
                android:background="@color/md_grey_300"
                android:layout_below="@+id/etName"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/etEmail"
                android:hint="Email Adress"
                android:background="null"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_below="@+id/v0"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/v1"
                android:background="@color/md_grey_300"
                android:layout_below="@+id/etEmail"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/etPassword"
                android:layout_below="@+id/v1"
                android:hint="Password"
                android:background="null"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/v2"
                android:background="@color/md_grey_300"
                android:layout_below="@+id/etPassword"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/etPhone"
                android:layout_below="@+id/v2"
                android:hint="Phone Number"
                android:background="null"
                android:layout_marginLeft="@dimen/_10sdp"/>

        </RelativeLayout>
        <TextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/btn_background"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Sign up"
            android:gravity="center"
            android:textColor="@color/colorPrimaryWhite"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="By Signing up ,You are agree To The"
            android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_8sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms conditions"
            android:textColor="@color/high_blue_900"
            android:textStyle="bold"
           android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_8sdp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>