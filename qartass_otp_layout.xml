<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/header13x"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/logo3x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Code For Verification"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <TextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:text="We Will Sent Verification Code To Your phone Via Message"
                android:layout_marginLeft="@dimen/_20sdp"/>
        </LinearLayout>

        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:id="@+id/txt_pin_entry"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:inputType="number"
            android:layoutDirection="ltr"
            android:maxLength="6"
            android:textIsSelectable="false"
            android:textSize="20sp"
            app:pinAnimationType="popIn"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="Continue"
            android:textColor="@color/colorPrimaryWhite"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="If You Don't Receive Code Within In 15 Seconds Tap Below To Re-Send It "
            android:textSize="@dimen/_8sdp"
            android:gravity="center"/>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="@dimen/_30sdp"
           android:background="@drawable/rounded_corners_white"
           android:gravity="center"
           android:layout_marginTop="@dimen/_10sdp">
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
               android:text="Re-send code"
            android:textColor="@color/high_blue_900"
            android:textStyle="bold"
               android:layout_marginLeft="@dimen/_10sdp"/>
           <ImageView
               android:layout_width="@dimen/_20sdp"
               android:layout_height="@dimen/_10sdp"
               android:background="@drawable/path"
               android:layout_marginRight="@dimen/_10sdp"
               android:layout_marginLeft="@dimen/_5sdp"/>
       </LinearLayout>
    </LinearLayout>


</LinearLayout>